<UserControl x:Class="Symphony.Ensemble.Controls.ListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:components="clr-namespace:Symphony.Ensemble.Controls.Components"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <VisualStateManager.VisualStateGroups>

        <VisualStateGroup x:Name="applicationStates">

            <VisualState x:Name="ListState">

                <Storyboard>

                    <DoubleAnimation 
                Storyboard.TargetName="findDetails"
                Storyboard.TargetProperty="(Opacity)" 
                Duration="0:0:0" To="0">
                    </DoubleAnimation>
                    <BooleanAnimationUsingKeyFrames
                Storyboard.TargetName="findDetails"
                Storyboard.TargetProperty="(IsEnabled)">
                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False"></DiscreteBooleanKeyFrame>
                    </BooleanAnimationUsingKeyFrames>
                    <Int32Animation 
                Storyboard.TargetName="findDetails"
                Storyboard.TargetProperty="(Panel.ZIndex)" 
                To="0">
                    </Int32Animation>

                    <DoubleAnimation 
                Storyboard.TargetName="igListDetails"
                Storyboard.TargetProperty="(Opacity)" 
                Duration="0:0:0" To="0">
                    </DoubleAnimation>
                    <BooleanAnimationUsingKeyFrames
                Storyboard.TargetName="igListDetails"
                Storyboard.TargetProperty="(IsEnabled)">
                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False"></DiscreteBooleanKeyFrame>
                    </BooleanAnimationUsingKeyFrames>
                    <Int32Animation 
                Storyboard.TargetName="igListDetails"
                Storyboard.TargetProperty="(Panel.ZIndex)" 
                To="0">
                    </Int32Animation>


                    <DoubleAnimation 
                Storyboard.TargetName="dxListDetails"
                Storyboard.TargetProperty="(Opacity)" 
                Duration="0:0:0" To="0">
                    </DoubleAnimation>
                    <BooleanAnimationUsingKeyFrames
                Storyboard.TargetName="dxListDetails"
                Storyboard.TargetProperty="(IsEnabled)">
                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False"></DiscreteBooleanKeyFrame>
                    </BooleanAnimationUsingKeyFrames>
                    <Int32Animation 
                Storyboard.TargetName="dxListDetails"
                Storyboard.TargetProperty="(Panel.ZIndex)" 
                To="0">
                    </Int32Animation>


                    <DoubleAnimation 
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(Opacity)" 
                Duration="0:0:0" To="1">
                    </DoubleAnimation>
                    <BooleanAnimationUsingKeyFrames
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(IsEnabled)">
                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"></DiscreteBooleanKeyFrame>
                    </BooleanAnimationUsingKeyFrames>
                    <Int32Animation 
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(Panel.ZIndex)" 
                To="1">
                    </Int32Animation>

                </Storyboard>
            </VisualState>

            <VisualState x:Name="FindState">

                <Storyboard>

                    <DoubleAnimation 
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(Opacity)" 
                Duration="0:0:0" To="0">
                    </DoubleAnimation>
                    <BooleanAnimationUsingKeyFrames
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(IsEnabled)">
                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False"></DiscreteBooleanKeyFrame>
                    </BooleanAnimationUsingKeyFrames>
                    <Int32Animation 
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(Panel.ZIndex)" 
                To="0">
                    </Int32Animation>

                    <DoubleAnimation 
                Storyboard.TargetName="findDetails"
                Storyboard.TargetProperty="(Opacity)" 
                Duration="0:0:0.5" To="1">
                    </DoubleAnimation>

                    <BooleanAnimationUsingKeyFrames
                Storyboard.TargetName="findDetails"
                Storyboard.TargetProperty="(IsEnabled)">
                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"></DiscreteBooleanKeyFrame>
                    </BooleanAnimationUsingKeyFrames>

                    <Int32Animation 
                Storyboard.TargetName="findDetails"
                Storyboard.TargetProperty="(Panel.ZIndex)" 
                To="1">
                    </Int32Animation>

                </Storyboard>
            </VisualState>




            <VisualState x:Name="InfragisticsState">

                <Storyboard>

                    <!-- hide the find details entry-->
                    <DoubleAnimation 
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(Opacity)" 
                Duration="0:0:0" To="0">
                    </DoubleAnimation>
                    <BooleanAnimationUsingKeyFrames
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(IsEnabled)">
                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False"></DiscreteBooleanKeyFrame>
                    </BooleanAnimationUsingKeyFrames>
                    <Int32Animation 
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(Panel.ZIndex)" 
                To="0">
                    </Int32Animation>

                    <DoubleAnimation 
                Storyboard.TargetName="igListDetails"
                Storyboard.TargetProperty="(Opacity)" 
                Duration="0:0:0" To="1">
                    </DoubleAnimation>
                    <BooleanAnimationUsingKeyFrames
                Storyboard.TargetName="igListDetails"
                Storyboard.TargetProperty="(IsEnabled)">
                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"></DiscreteBooleanKeyFrame>
                    </BooleanAnimationUsingKeyFrames>
                    <Int32Animation 
                Storyboard.TargetName="igListDetails"
                Storyboard.TargetProperty="(Panel.ZIndex)" 
                To="1">
                    </Int32Animation>
                </Storyboard>
            </VisualState>


            <VisualState x:Name="DevExpressState">

                <Storyboard>

                    <!-- hide the find details entry-->
                    <DoubleAnimation 
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(Opacity)" 
                Duration="0:0:0" To="0">
                    </DoubleAnimation>
                    <BooleanAnimationUsingKeyFrames
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(IsEnabled)">
                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False"></DiscreteBooleanKeyFrame>
                    </BooleanAnimationUsingKeyFrames>
                    <Int32Animation 
                Storyboard.TargetName="listDetails"
                Storyboard.TargetProperty="(Panel.ZIndex)" 
                To="0">
                    </Int32Animation>

                    <DoubleAnimation 
                Storyboard.TargetName="dxListDetails"
                Storyboard.TargetProperty="(Opacity)" 
                Duration="0:0:0" To="1">
                    </DoubleAnimation>
                    <BooleanAnimationUsingKeyFrames
                Storyboard.TargetName="dxListDetails"
                Storyboard.TargetProperty="(IsEnabled)">
                        <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"></DiscreteBooleanKeyFrame>
                    </BooleanAnimationUsingKeyFrames>
                    <Int32Animation 
                Storyboard.TargetName="dxListDetails"
                Storyboard.TargetProperty="(Panel.ZIndex)" 
                To="1">
                    </Int32Animation>
                </Storyboard>
            </VisualState>


        </VisualStateGroup>

    </VisualStateManager.VisualStateGroups>



    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" x:Name="listDetails" Opacity="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Content="Search" Command="{Binding Path=ButtonCommand}" CommandParameter="SEARCH"></Button>
                <components:ListGrid Grid.Row="1"></components:ListGrid>
            </Grid>
        </Border>

        <Border Grid.Row="0" x:Name="findDetails" Opacity="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <components:ListFind Grid.Row="0"></components:ListFind>
                <components:ListGrid Grid.Row="1"></components:ListGrid>
            </Grid>
        </Border>

        <Border Grid.Row="0" x:Name="dxListDetails" Opacity="0">
        </Border>

        <Border Grid.Row="0" x:Name="igListDetails" Opacity="0">
        </Border>

    </Grid>
</UserControl>
